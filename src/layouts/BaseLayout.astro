---
import "../styles/global.css";
import { withBase } from "../utils/site";

const { title = "MuhWebby" } = Astro.props;
const faviconHref = withBase("diverwhat.webp?v=3");
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" href={faviconHref} sizes="any" />
		<link rel="shortcut icon" href={faviconHref} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<a class="brand font-special" href={withBase()}>Andrew Loh</a>
			<nav class="site-nav">
				<a href={withBase()}>Home</a>
				<a href={withBase("projects/")}>Projects</a>
				<a href={withBase("resume/")}>Resume</a>
				<a href={withBase("pong/")}>Pong</a>
				<a href={withBase("experimental/")}>Experimental</a>
			</nav>
		</header>

		<main class="site-main">
			<slot />
		</main>

		<footer class="site-footer">
			Watchu lookin at ʕ·͡ᴥ·ʔ
		</footer>
	</body>
</html>
