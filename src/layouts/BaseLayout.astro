---
import "../styles/global.css";
import { withBase } from "../utils/site";

const { title = "MuhWebby" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href={withBase("favicon.svg")} />
		<link rel="icon" href={withBase("favicon.ico")} />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<a class="brand font-special" href={withBase()}>Andrew Loh</a>
			<nav class="site-nav">
				<a href={withBase()}>Home</a>
				<a href={withBase("projects/")}>Projects</a>
				<a href={withBase("resume/")}>Resume</a>
				<a href={withBase("pong/")}>Pong</a>
				<a href={withBase("experimental/")}>Experimental</a>
			</nav>
		</header>

		<main class="site-main">
			<slot />
		</main>

		<footer class="site-footer">
			Placeholder footer text for now.
		</footer>

		<script is:inline>
			if (new URLSearchParams(window.location.search).has("debugLinks")) {
				document.querySelectorAll("a[href]").forEach((link) => {
					console.debug("[link-debug]", {
						text: link.textContent?.trim(),
						attrHref: link.getAttribute("href"),
						resolvedHref: link.href,
					});
				});
			}
		</script>
	</body>
</html>
